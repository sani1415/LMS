# .htaccess file for cPanel Flask deployment
PassengerAppRoot /home/yourusername/public_html
PassengerAppType wsgi
PassengerStartupFile passenger_wsgi.py
PassengerPython /usr/bin/python3

# Set environment
SetEnv FLASK_ENV production

# Enable URL rewriting
RewriteEngine On

# Allow static files (CSS, JS, images) to be served directly
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule ^.*$ - [L]

# Allow directories to be served directly  
RewriteCond %{REQUEST_FILENAME} -d
RewriteRule ^.*$ - [L]

# Route everything else through Flask application
RewriteRule ^(.*)$ passenger_wsgi.py/$1 [QSA,L]
